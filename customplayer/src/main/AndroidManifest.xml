<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.testthb.customplayer">

    <application
        android:usesCleartextTraffic="true"
        android:name="com.testthb.common_base.DemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.testthb.customplayer.activity.ffmpeg.FFmpegMuxerActivity"></activity>
        <activity android:name="com.testthb.customplayer.activity.ffmpeg.FFmpegGLESMuxerActivity"></activity>
        <activity android:name="com.testthb.customplayer.activity.ffmpeg.RtmpGLESActivity"></activity>
        <activity android:name="com.testthb.customplayer.activity.ffmpeg.ShortVideoActivity"></activity>


        <activity
            android:name="com.testthb.customplayer.activity.hw.PlayerMediaActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name="com.testthb.customplayer.activity.ffmpeg.PlayerDecodeFFmpegActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name="com.testthb.customplayer.activity.ffmpeg.AvEditorActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.testthb.customplayer.activity.ffmpeg.WebrtcActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppThemeNoActionBar"></activity>

        <activity
            android:name="com.testthb.customplayer.activity.hw.PlayerDecodeHwActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name="com.testthb.customplayer.activity.hw.PlayerDecodeHwOpenGLESActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity android:name="com.testthb.customplayer.activity.CustomPlayerListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>